#!/usr/bin/env bash

ROOT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# exit on error
set -e

# build src/ui
cd $ROOT_DIR/src/ui
npm install
npm run build

# install server
cd $ROOT_DIR/src/server
pip install -e .[dev]

# build server
cd $ROOT_DIR/server
ln -s $ROOT_DIR/src/ui/build site
pip install -r requirements.txt
pyinstaller --clean server.spec

# build desktop
cd $ROOT_DIR/desktop

# NOT WORKING:
#   ln -s $ROOT_DIR/server/dist/test-automation server
# electron-builder won't follow symlink
mkdir -p server
cp -r $ROOT_DIR/server/dist/test-automation/* server/

mkdir -p build
cp -r assets/icons     build/
cp    assets/icon.icns build/
cp    assets/icon.ico  build/

npm install
npm run dist
